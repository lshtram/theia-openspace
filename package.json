{
  "name": "theia-openspace",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.7.0 <2"
  },
  "workspaces": [
    "browser-app",
    "electron-app",
    "extensions/*",
    "packages/*",
    "openspace-voice-vscode"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "node scripts/build-summary.js",
    "build:dev": "node scripts/build-summary.js --mode dev",
    "build:clean": "node scripts/clean-build.js",
    "build:verbose": "yarn build:extensions && yarn build:browser",
  "build:extensions": "yarn --silent --cwd extensions/openspace-core build && yarn --silent --cwd extensions/openspace-settings build && yarn --silent --cwd extensions/openspace-chat build && yarn --silent --cwd extensions/openspace-presentation build && yarn --silent --cwd extensions/openspace-whiteboard build && yarn --silent --cwd extensions/openspace-voice build && yarn --silent --cwd extensions/openspace-layout build && yarn --silent --cwd extensions/openspace-languages build && yarn --silent --cwd extensions/openspace-viewers build",
    "build:browser": "yarn --silent --cwd browser-app build",
    "build:electron": "yarn --cwd electron-app build",
    "start:browser": "yarn --cwd browser-app start",
    "start:electron": "yarn --cwd electron-app start",
    "setup:plugins": "node scripts/download-plugins.js",
    "setup:plugins:check": "node scripts/download-plugins.js --check",
    "watch": "yarn --cwd browser-app watch",
    "clean": "yarn --cwd browser-app clean && yarn --cwd electron-app clean && rimraf extensions/*/lib extensions/*/tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "npm run test:unit && npm run test:e2e",
    "test:all": "yarn test:unit && yarn typecheck && yarn lint && yarn test:e2e",
    "test:unit": "mocha",
    "test:e2e": "bash scripts/e2e-precheck.sh && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "nyc mocha",
    "test:watch": "mocha --watch",
    "servers:start": "bash scripts/servers.sh start",
    "servers:stop": "bash scripts/servers.sh stop",
    "servers:status": "bash scripts/e2e-precheck.sh --status",
    "e2e:precheck": "bash scripts/e2e-precheck.sh"
  },
  "resolutions": {
    "@theia/monaco-editor-core": "1.96.302"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/chai": "^4.3.0",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/react-dom": "^19.2.3",
    "@types/sinon": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "chai": "^4.5.0",
    "eslint": "^8.0.0",
    "global-jsdom": "^28.0.0",
    "jsdom": "^28.1.0",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "rimraf": "^5.0.0",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
